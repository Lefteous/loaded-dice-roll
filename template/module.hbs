<form>
  <div class="form-group">
    <label for="formula">{{localize "loaded-dice-roll.form.formula.title"}}</label>
    <input
      type="text"
      name="formula"
      id="formula"
      placeholder="{{localize 'loaded-dice-roll.form.formula.placeholder'}}"
      value="{{values.formula}}"
    />
  </div>
  {{#if errors.formula}}
    <div class="form-error">{{errors.formula}}</div>
  {{/if}}
  <div class="form-group">
    <label for="target">{{localize "loaded-dice-roll.form.target.title"}}</label>
    <input
      type="text"
      name="target"
      id="target"
      placeholder="{{localize 'loaded-dice-roll.form.target.placeholder'}}"
      value="{{values.target}}"
    />
  </div>
  {{#if errors.target}}
    <div class="form-error">{{errors.target}}</div>
  {{/if}}
  <button type="submit" class="btn btn-primary">{{localize "loaded-dice-roll.form.roll-button.title"}}</button>
</form>